extends layout

block content
  h1= title
  - let apple = results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row m-1')
      each m, index in apple 
       - let destination = `dispatch(\"/apple/update?id=${m._id}\")`
       div(class="row-sm-2", class="m-1") Item #{m.apple_type}(#{m.quantity}) is #{m.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update

  script. 
    function dispatch(path){ 
      window.location.href=path 
    }