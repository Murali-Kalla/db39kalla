extends layout

block content
  h1= title
  - let apple = results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each m, index in apple 
       div(class="col-sm-2" onclick=`buy(${index})`) #{m.apple_type} #{m.quantity} #{m.cost}